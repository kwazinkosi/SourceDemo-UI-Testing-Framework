<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross_Browser_Test_Suite" parallel="tests" thread-count="3">

	<listeners>
        <listener class-name="listeners.ReportListener"/>
    </listeners>  
    <!-- Chrome Tests -->
    <test name="Chrome Tests" parallel="classes" thread-count="2">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.pages.LoginPageTest"/>
            <class name="tests.pages.LandingPageTest"/>
            <class name="tests.pages.ProductDetailsPageTest"/>
            <class name="tests.pages.CartPageTest"/>
            <class name="tests.pages.CheckoutPageTest"/>
            <class name="tests.pages.CheckoutOverviewPageTest"/>
            <class name="tests.pages.CheckoutCompletePageTest"/>
        </classes>
    </test>
    
    <!-- Edge Tests -->
    <test name="Edge Tests" parallel="classes" thread-count="2">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="tests.pages.LoginPageTest"/>
            <class name="tests.pages.LandingPageTest"/>
            <class name="tests.pages.ProductDetailsPageTest"/>
            <class name="tests.pages.CartPageTest"/>
            <class name="tests.pages.CheckoutPageTest"/>
            <class name="tests.pages.CheckoutOverviewPageTest"/>
            <class name="tests.pages.CheckoutCompletePageTest"/>
        </classes>
    </test>

    <!-- Firefox Tests -->
    <test name="Firefox Tests" parallel="classes" thread-count="3">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.pages.LoginPageTest"/>
            <class name="tests.pages.LandingPageTest"/>
            <class name="tests.pages.ProductDetailsPageTest"/>
            <class name="tests.pages.CartPageTest"/>
            <class name="tests.pages.CheckoutPageTest"/>
            <class name="tests.pages.CheckoutOverviewPageTest"/>
            <class name="tests.pages.CheckoutCompletePageTest"/>
        </classes>
    </test>
</suite>