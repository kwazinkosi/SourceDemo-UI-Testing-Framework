<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceDemo_Automation_Suite" verbose="2" parallel="classes" thread-count="4">

    <!-- ================== -->
    <!-- Global Configurations -->
    <!-- ================== -->
    <listeners>
        <listener class-name="listeners.ReportListener"/>
    </listeners>

    <!-- ================== -->
    <!-- Test Organization -->
    <!-- ================== -->
    
    <!-- Core Functionality Tests -->
    <test name="Login_and_Basic_Flow" parallel="classes" thread-count="3">
        <classes>
            <class name="tests.LoginPageTest"/>
            <class name="tests.LandingPageTest"/>
            <class name="tests.ProductDetailsPageTest"/>
        </classes>
    </test>

    <!-- Checkout Flow Tests -->
    <test name="Checkout_Process" parallel="classes" thread-count="3">
        <classes>
            <class name="tests.CartPageTest"/>
            <class name="tests.CheckoutPageTest"/>
            <class name="tests.CheckoutOverviewPageTest"/>
            <class name="tests.CheckoutCompletePageTest"/>
        </classes>
    </test>

</suite>
